server {
	error_page 404 /404.html;
	location = /404.html {
		internal;
	}
	location ~ /api/(.*)$ {
		proxy_pass http://127.0.0.1:5000/api/$1;
	}
	server_name api.workhubconnect.me www.workhubconnect.me workhubconnect.me; # managed by Certbot

		listen [::]:443 ssl ipv6only=on; # managed by Certbot
		listen 443 ssl; # managed by Certbot
		ssl_certificate /etc/letsencrypt/live/workhubconnect.me/fullchain.pem; # managed by Certbot
		ssl_certificate_key /etc/letsencrypt/live/workhubconnect.me/privkey.pem; # managed by Certbot
		include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
		ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

} server {
	if ($host = api.workhubconnect.me) {
		return 301 https://$host$request_uri;
	} # managed by Certbot

	if ($host = www.workhubconnect.me) {
		return 301 https://$host$request_uri;
	} # managed by Certbot

	if ($host = workhubconnect.me) {
		return 301 https://$host$request_uri;
	} # managed by Certbot

	listen 80 ;
	listen [::]:80 ;
	server_name api.workhubconnect.me www.workhubconnect.me workhubconnect.me;
	return 404; # managed by Certbot
}
